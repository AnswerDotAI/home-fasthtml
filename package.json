{
  "name": "fasthtml",
  "version": "0.1.0",
  "description": "FastHTML landing page",
  "main": "index.js",
  "scripts": {
    "build": "pnpm run build:css && pnpm run build:copy",
    "build:copy": "cpx \"src/**/*\" \"dist/\" --ignore \"src/css/styles.css\"",
    "build:css": "npx tailwindcss -i ./src/css/styles.css -o ./dist/css/styles.css",
    "build:css:watch": "pnpm run build:css --watch"
  },
  "keywords": [],
  "devDependencies": {
    "cpx2": "^7.0.1",
    "tailwindcss": "^3.4.4"
  }
}

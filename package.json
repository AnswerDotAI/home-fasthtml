{
  "name": "fasthtml",
  "version": "0.1.0",
  "description": "FastHTML landing page",
  "main": "index.js",
  "scripts": {
    "build": "pnpm run build:css && pnpm run build:copy",
    "build:copy": "cpy src/**/* dist/ --parents ",
    "build:css": "npx tailwindcss -i ./src/css/main.css -o ./dist/css/styles.css",
    "build:css:watch": "npx tailwindcss -i ./src/css/main.css -o ./dist/css/styles.css --watch"
  },
  "keywords": [],
  "devDependencies": {
    "cpy-cli": "^5.0.0",
    "tailwindcss": "^3.4.4"
  }
}
